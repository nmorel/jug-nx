{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "@jug-nx",
  "affected": {
    "defaultBase": "main"
  },
  "cli": {
    "packageManager": "pnpm"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "lint"],
        "cacheDirectory": "./.nx-cache"
      }
    }
  },
  "namedInputs": {
    "srcFiles": ["{projectRoot}/src/**/*", "!{projectRoot}/src/test/**/*"],
    "testFiles": ["{projectRoot}/src/**/*", "{projectRoot}/test/**/*"],
    "jsConfig": [
      "{projectRoot}/package.json",
      "{workspaceRoot}/package.json",
      "{projectRoot}/tsconfig*.json"
    ],
    "javaConfig": ["jsConfig", "{projectRoot}/pom.xml"],
    "prettierConfig": [
      "{workspaceRoot}/.prettierrc.js",
      "{workspaceRoot}/configs/prettier/src/**/*",
      "{workspaceRoot}/configs/prettier/package.json"
    ],
    "eslintConfig": [
      "prettierConfig",
      "{workspaceRoot}/.eslintrc.js",
      "{workspaceRoot}/configs/eslint/src/**/*",
      "{workspaceRoot}/configs/eslint/package.json"
    ],
    "buildFiles": ["srcFiles", "jsConfig", "javaConfig"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["buildFiles", "^buildFiles"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/target/*.jar", "{projectRoot}/target/*.war"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["testFiles", "jsConfig", "javaConfig", "^buildFiles"],
      "outputs": ["{projectRoot}/target/surefire-reports"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["srcFiles", "testFiles", "eslintConfig"],
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^build"]
    }
  }
}
