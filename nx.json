{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "@jug-nx",
  "affected": {
    "defaultBase": "main"
  },
  "cli": {
    "packageManager": "pnpm"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test"],
        "cacheDirectory": "./.nx-cache"
      }
    }
  },
  "namedInputs": {
    "srcFiles": ["{projectRoot}/src/**/*", "!{projectRoot}/src/test/**/*"],
    "testFiles": ["{projectRoot}/src/**/*", "{projectRoot}/test/**/*"],
    "jsConfig": ["{projectRoot}/package.json", "{workspaceRoot}/package.json", "{projectRoot}/tsconfig*.json"],
    "javaConfig": ["jsConfig", "{projectRoot}/pom.xml"],
    "buildFiles": ["srcFiles", "jsConfig", "javaConfig"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["buildFiles", "^buildFiles"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/target/*.jar", "{projectRoot}/target/*.war"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["testFiles", "jsConfig", "javaConfig", "^buildFiles"],
      "outputs": ["{projectRoot}/target/surefire-reports"]
    },
    "dev": {
      "dependsOn": ["^build"]
    }
  }
}
