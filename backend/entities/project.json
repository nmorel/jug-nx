{
  "name": "@back/entities",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./mvnw -pl :entities -DskipTests=true clean package"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./mvnw -pl :entities test"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx test @back/entities && nx watch --projects=@back/parent-pom,@back/entities -- nx test @back/entities"
      }
    }
  }
}
